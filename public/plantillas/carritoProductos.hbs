<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
    <h2>Productos</h2>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Thumbnail</th>
                <th>ID</th>
                <th>Quitar</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
                <td>{{this.id}}</td>
                <td width="50"><button onclick="removeProduct({{this.id}})"
                        style="background-color: transparent; border: 0; width: 50px"><svg
                            xmlns="http://www.w3.org/2000/svg" height="20" width="20">
                            <path fill="white"
                                d="M10 18.5Q8.229 18.5 6.677 17.833Q5.125 17.167 3.979 16.021Q2.833 14.875 2.167 13.323Q1.5 11.771 1.5 10Q1.5 8.229 2.167 6.677Q2.833 5.125 3.979 3.979Q5.125 2.833 6.677 2.167Q8.229 1.5 10 1.5Q11.771 1.5 13.323 2.167Q14.875 2.833 16.021 3.979Q17.167 5.125 17.833 6.677Q18.5 8.229 18.5 10Q18.5 11.771 17.833 13.323Q17.167 14.875 16.021 16.021Q14.875 17.167 13.323 17.833Q11.771 18.5 10 18.5ZM7.083 14.188 10 11.271 12.917 14.188 14.208 12.896 11.292 10 14.208 7.083 12.917 5.792 10 8.708 7.083 5.792 5.812 7.062 8.729 10 5.812 12.917Z" />
                        </svg></button></td>
            </tr>
            {{/each}}
        </table>
        <h3>Precio total: ${{precioTotal}}</h3>
        <button class="btn btn-outline-success my-2 my-sm-0" style="margin: 10px" onclick="checkout()">Checkout</button>
    </div>
{{/if}}
